body {
  font-family: sans-serif;
  background: #f4f4f4;
  padding: 20px;
  text-align: center;
}

.container {
  max-width: 500px;
  margin: auto;
  background: white;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 0 12px rgba(0,0,0,0.1);
}

input {
  padding: 10px;
  font-size: 1.1em;
  width: 80%;
  margin: 10px 0;
}

button {
  padding: 10px 20px;
  font-size: 1em;
  margin: 10px;
  cursor: pointer;
}
